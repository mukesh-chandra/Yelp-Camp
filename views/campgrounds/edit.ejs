<% include ../partials/header.ejs  %>
<h1 style="text-align:center;">Edit <%=foundCampground.name%> </h1>

    <div class="row">
        <div style="width:30% ; margin : 25px auto ;">
            <form action="/campgrounds/<%=foundCampground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=foundCampground.name%>" id="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=foundCampground.price%>" id="price" name="price" step="0.01" min="0.01">
                </div>
                <div class="form-group">
                   <label for="location">Location</label>
                   <input class="form-control" type="text"  id="location" value="<%= foundCampground.location %>" id="location"name="location">
                   </div>
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=foundCampground.image%>" id="image" name="image">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=foundCampground.description%>" id="description" name="description">
                </div>
                <div class="form-group">
                     <button class="btn btn-primary btn-lg btn-block " >Submit</button>
                </div>
               
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


<% include ../partials/footer.ejs  %>